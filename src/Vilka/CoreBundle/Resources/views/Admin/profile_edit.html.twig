{% extends 'VilkaCoreBundle::layout.html.twig' %}
{% block title %}Редактирование профиля{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Редактирование профиля</h2>
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <div class="form-group">
                            {{ form_label(form.username, 'Имя пользователя') }}
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Введите имя пользователя'} }) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Введите email'} }) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password, 'Пароль') }}
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Введите новый пароль'} }) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password_confirm, 'Подтверждение пароля') }}
                            {{ form_widget(form.password_confirm, { 'attr': {'class': 'form-control', 'placeholder': 'Повторите новый пароль'} }) }}
                            {{ form_errors(form.password_confirm) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}