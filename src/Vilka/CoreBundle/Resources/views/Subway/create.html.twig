{% extends 'VilkaCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Создание станции метро{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Создание станции метро</h2>
                        {{ form_start(form) }}
                        <div class="errors">{{ form_errors(form) }}</div>
                        {{ form_widget(form._token) }}
                        <div class="form-group">
                            {{ form_label(form.name, 'Название') }}
                            {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Введите название'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.line, 'Ветка') }}
                            {{ form_widget(form.line, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
