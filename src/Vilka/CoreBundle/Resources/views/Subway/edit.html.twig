{% extends 'VilkaCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Редактирование станции метро{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Редактирование станции метро</h2>
                        {{ form_start(edit_form) }}
                        {{ form_errors(edit_form) }}
                        <div class="form-group">
                            {{ form_label(edit_form.name, 'Название') }}
                            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Введите название'} }) }}
                            {{ form_errors(edit_form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.line, 'Ветка') }}
                            {{ form_widget(edit_form.line, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(edit_form.line, { 'attr': {'class': 'error-message'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}