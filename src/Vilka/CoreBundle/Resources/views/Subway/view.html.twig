{% extends 'VilkaCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Станция метро - {{ entity.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="clearfix">
                    <h2 class="pull-left">Станция метро - {{ entity.name }}</h2>
                    <div class="filter-block pull-right">
                        <a href="{{ path('vilka_control_subway') }}" class="btn btn-primary pull-right">
                            <i class="fa fa-arrow-left fa-lg"></i> Назад к списку
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            <tr>
                                <td><b>ID</b></td>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <td><b>Название</b></td>
                                <td>{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <td><b>Линия</b></td>
                                <td>{{ entity.line }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}