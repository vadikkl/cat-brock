{% extends 'EwaveCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Edit environment {{ app.session.get('settings').separator }} {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Edit environment</h2>
                        {{ form_start(edit_form) }}
                        <div class="errors">{{ form_errors(edit_form) }}</div>
                        {{ form_widget(edit_form._token) }}
                        <div class="form-group">
                            {{ form_label(edit_form.type) }}
                            {{ form_widget(edit_form.type, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.description) }}
                            {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}