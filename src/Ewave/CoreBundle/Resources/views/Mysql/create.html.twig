{% extends 'EwaveCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Create SQL connecton {{ app.session.get('settings').separator }} {{ parent() }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Create SQL connecton</h2>
                        {{ form_start(form) }}
                        <div class="errors">{{ form_errors(form) }}</div>
                        {{ form_widget(form._token) }}
                        <div class="form-group">
                            {{ form_label(form.server) }}
                            {{ form_widget(form.server, { 'attr': {'class': 'form-control', 'placeholder': 'Enter server'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.port) }}
                            {{ form_widget(form.port, { 'attr': {'class': 'form-control', 'placeholder': 'Enter port'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.user) }}
                            {{ form_widget(form.user, { 'attr': {'class': 'form-control', 'placeholder': 'Enter  user'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Enter password'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.dbname) }}
                            {{ form_widget(form.dbname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter database name'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
