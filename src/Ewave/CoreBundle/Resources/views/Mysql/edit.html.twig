{% extends 'EwaveCoreBundle::layout.html.twig' %}
{% set is_book = true %}
{% block title %}Edit SQL {{ app.session.get('settings').separator }} {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-box">
                        <h2>Edit SQL</h2>
                        {{ form_start(edit_form) }}
                        <div class="errors">{{ form_errors(edit_form) }}</div>
                        {{ form_widget(edit_form._token) }}
                        <div class="form-group">
                            {{ form_label(edit_form.server) }}
                            {{ form_widget(edit_form.server, { 'attr': {'class': 'form-control', 'placeholder': 'Enter server'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.port) }}
                            {{ form_widget(edit_form.port, { 'attr': {'class': 'form-control', 'placeholder': 'Enter port'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.user) }}
                            {{ form_widget(edit_form.user, { 'attr': {'class': 'form-control', 'placeholder': 'Enter user'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.password) }}
                            {{ form_widget(edit_form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Enter password'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(edit_form.dbname) }}
                            {{ form_widget(edit_form.dbname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter database name'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}