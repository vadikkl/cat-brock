<!DOCTYPE html>
<html>
    <head>
        {% block meta %}
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}
        <title>{% block title %} | Панель управления{% endblock %}</title>
        {% block stylesheets %}
            <!-- bootstrap -->
            <link href="{{ asset('bundles/vilkacore/css/bootstrap/bootstrap.css') }}" rel="stylesheet" />
            <!-- libraries -->
            <link href="{{ asset('bundles/vilkacore/css/libs/font-awesome.css') }}" type="text/css" rel="stylesheet" />
            <!-- global styles -->
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/vilkacore/css/compiled/layout.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/vilkacore/css/compiled/elements.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/vilkacore/css/compiled/control.css') }}">
            <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,600,400italic,800italic,800,700italic,700,600italic&subset=latin,cyrillic-ext,cyrillic" rel="stylesheet" type="text/css">
            <link href="http://fonts.googleapis.com/css?family=Exo+2:400,900italic,900,800italic,800,700,700italic,600italic,600,500italic,500,400italic,300,300italic,200italic,200,100italic,100&subset=latin,cyrillic" rel="stylesheet" type="text/css">
        {% endblock %}
        {% block head_script %}
            <!--[if lt IE 9]>
            <script src="{{ asset('bundles/vilkacore/js/html5shiv.js') }}"></script>
            <script src="{{ asset('bundles/vilkacore/js/respond.min.js') }}"></script>
            <![endif]-->
        {% endblock %}
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block body_script %}
            <!-- global scripts -->
            <script src="{{ asset('bundles/vilkacore/js/jquery.js') }}"></script>
            <script src="{{ asset('bundles/vilkacore/js/jquery.cookie.js') }}"></script>
            <script src="{{ asset('bundles/vilkacore/js/bootstrap.js') }}"></script>
            <!-- theme scripts -->
            <script src="{{ asset('bundles/vilkacore/js/control.js') }}"></script>
            <script src="{{ asset('bundles/vilkacore/js/scripts.js') }}"></script>
        {% endblock %}
    </body>
</html>